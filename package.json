{
  "name": "backups",
  "version": "1.2.4",
  "description": "",
  "scripts": {
    "clean": "rm -rf node_modules; pnpm test:coverage:clean; pnpm build:clean;",
    "prepare": "husky install",
    "prebuild": "pnpm build:clean && pnpm rebuild && pnpm test",
    "build": "pnpm build:clean && pnpm build:raw",
    "build:raw": "tsc -p tsconfig-build.json && resolve-tspaths -o build/src && pnpm build:ln",
    "build:ln": "ln -s ../package.json build/",
    "build:clean": "rm -rf build",
    "bin:install": "pnpm build && BIN_OUT=/bin/backup; sudo rm -f \"$BIN_OUT\" && sudo ln -s \"$(pwd)/build/src/bin.js\" \"$BIN_OUT\" && sudo chmod +x \"$BIN_OUT\"",
    "test": "NODE_ENV=test jest --maxWorkers=1",
    "test:watch": "pnpm run test --watch",
    "test:coverage": "pnpm run test --coverage",
    "test:coverage:clean": "rm -rf coverage",
    "docs": "pnpm lint:fix && pnpm docs:clean && typedoc",
    "postdocs": ".scripts/docs-footer.sh",
    "docs:clean": ".scripts/docs-clean.sh",
    "docs:push": ".scripts/docs-push.sh",
    "lint:eslint": "eslint **/*.{ts,js,tsx,jsx}",
    "lint:prettier": "prettier **/*.{json,jsonc,scss,yml}",
    "lint:fix": "pnpm run lint:prettier --write && pnpm run lint:eslint --fix",
    "version:release": "standard-version",
    "git:pr": "pnpm git:pr:create && pnpm git:pr:merge-delete",
    "git:pr:create": "gh pr create --base main --fill",
    "git:pr:merge": "gh pr merge --auto --rebase",
    "git:pr:merge-delete": "gh pr merge --auto --rebase --delete-branch",
    "readme": "pnpm readme:clean && npx readme-md-generator -p .readme/template.md -y",
    "readme:clean": "rm -f README.md"
  },
  "keywords": [],
  "author": "Daniel Sales √Ålvarez <danisales.es@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "17.6.3",
    "@commitlint/config-conventional": "17.6.3",
    "@types/jest": "29.5.1",
    "@types/node": "18.16.2",
    "@types/sha256-file": "1.0.1",
    "@types/yargs": "17.0.24",
    "@typescript-eslint/eslint-plugin": "5.59.5",
    "@typescript-eslint/parser": "5.59.5",
    "eslint": "8.40.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "resolve-tspaths": "^0.8.13",
    "standard-version": "9.5.0",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "tslib": "2.5.0",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "deasync": "0.1.28",
    "sha256-file": "1.0.0",
    "synchronized-promise": "0.3.1",
    "utimes": "5.1.1",
    "yargs": "17.7.2"
  }
}
